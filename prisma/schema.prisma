generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Treino {
  id         String      @id @default(uuid())
  nome       String
  exercicios Exercicio[] // Relacionamento com os exerc√≠cios
  createdAt  DateTime    @default(now())
  Descanso   Descanso[]
}

model Exercicio {
  id        String   @id @default(uuid())
  nome      String
  imagemUrl String
  treinoId  String
  treino    Treino   @relation(fields: [treinoId], references: [id])
  createdAt DateTime @default(now())
}

model Descanso {
  id        String   @id @default(uuid())
  duracao   Int // em segundos ou minutos
  treinoId  String?
  treino    Treino?  @relation(fields: [treinoId], references: [id])
  createdAt DateTime @default(now())
}
